.card{background:#fff;border-radius:10px;overflow:hidden;box-shadow:0 2px 8px rgba(0,0,0,0.1);cursor:pointer}
.card img{width:100%;height:150px;object-fit:cover}
.card-body{padding:10px}
.badge{background:#e6f0ff;color:#0d6efd;padding:4px 8px;border-radius:5px;font-size:12px}
.modal-backdrop{position:fixed;inset:0;background:rgba(0,0,0,0.5);display:none;align-items:center;justify-content:center;padding:10px}
.modal{background:#fff;border-radius:8px;max-width:500px;width:100%;padding:20px}
